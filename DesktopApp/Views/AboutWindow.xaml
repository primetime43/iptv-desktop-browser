<Window x:Class="DesktopApp.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="440" Width="540" WindowStartupLocation="CenterOwner" Background="#0D1117" ResizeMode="CanResizeWithGrip" MinHeight="380" MinWidth="480">
    <Window.Resources>
        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#182335" Offset="0"/>
            <GradientStop Color="#101822" Offset="0.55"/>
            <GradientStop Color="#0D1117" Offset="1"/>
        </LinearGradientBrush>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#3D6EFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14 8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#5A82FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#2F57B8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="LinkText">
            <Setter Property="Foreground" Value="#5A82FF"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Border Background="{StaticResource BgGradient}" CornerRadius="14" Padding="28 30" Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="IPTV Desktop Browser" FontSize="24" FontWeight="Bold" Foreground="#F0F6FC"/>
                <TextBlock x:Name="VersionText" Margin="0 6 0 14" Foreground="#9FB3C7" FontSize="12"/>
                <StackPanel Margin="0 0 0 16">
                    <TextBlock TextWrapping="Wrap" Foreground="#8BA1B9" FontSize="13">
IPTV Desktop Browser is an open source project for exploring IPTV playlists and Xtream accounts on Windows.
                    </TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBlock Style="{StaticResource LinkText}" MouseLeftButtonUp="RepoLink_Click">GitHub Repository</TextBlock>
                    <TextBlock x:Name="ReleaseLink" Style="{StaticResource LinkText}" Margin="0 4 0 0" Visibility="Collapsed" MouseLeftButtonUp="ReleaseLink_Click">Open Latest Release</TextBlock>
                </StackPanel>
                <Border Margin="0 18 0 12" Background="#182230" CornerRadius="10" Padding="14 12">
                    <StackPanel>
                        <TextBlock Text="Update Status" Foreground="#A4B6C7" FontWeight="SemiBold"/>
                        <TextBlock x:Name="UpdateStatusText" Foreground="#6C8298" FontSize="12" Margin="0 4 0 0" Text="Checking for updates..."/>
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <Button x:Name="CheckUpdateButton" Content="Check Again" Width="120" Height="34" Click="CheckUpdateButton_Click" Style="{StaticResource PrimaryButton}"/>
                            <Button x:Name="OpenReleaseButton" Content="Get Update" Width="120" Height="34" Margin="10 0 0 0" Style="{StaticResource PrimaryButton}" Visibility="Collapsed" Click="OpenReleaseButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>