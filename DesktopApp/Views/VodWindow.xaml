<Window x:Class="DesktopApp.Views.VodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:DesktopApp.Converters"
        Title="VOD Library" Height="650" Width="1100" Background="#0D1117" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Video on Demand" FontWeight="Bold" Foreground="#F0F6FC" FontSize="18" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 10 0 8" VerticalAlignment="Center">
            <TextBlock Text="Category:" Foreground="#8BA1B9" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <ComboBox x:Name="VodCategoryCombo" Width="260" Height="32" Background="#182433" Foreground="#DDE6F2" BorderBrush="#223247"
                      ItemsSource="{Binding VodCategories}" DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"
                      SelectedValue="{Binding SelectedVodCategoryId}">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <ToggleButton Name="ToggleButton"
                                                      BorderBrush="{TemplateBinding BorderBrush}"
                                                      Background="{TemplateBinding Background}"
                                                      Foreground="{TemplateBinding Foreground}"
                                                      Grid.Column="2"
                                                      Focusable="false"
                                                      IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                                      ClickMode="Press">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="4">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="20"/>
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter Grid.Column="0" Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding Content}"
                                                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                                                              Margin="8,3,0,3"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left" />
                                                            <Path Grid.Column="1" x:Name="Arrow" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                  Data="M 0 0 L 4 4 L 8 0 Z" Fill="#DDE6F2"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>
                                        <ContentPresenter Name="ContentSite" IsHitTestVisible="False"
                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                          Margin="8,3,23,3"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left" />
                                        <Popup Name="Popup"
                                               Placement="Bottom"
                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                               AllowsTransparency="True"
                                               Focusable="False"
                                               PopupAnimation="Slide">
                                            <Grid Name="DropDown"
                                                  SnapsToDevicePixels="True"
                                                  MinWidth="{TemplateBinding ActualWidth}"
                                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                <Border x:Name="DropDownBorder"
                                                        Background="#182433"
                                                        BorderBrush="#223247"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Margin="0,1,0,0"/>
                                                <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                </ScrollViewer>
                                            </Grid>
                                        </Popup>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.Style>
                <ComboBox.Resources>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#DDE6F2"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Padding" Value="8,3,8,3"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" Padding="{TemplateBinding Padding}" CornerRadius="2" Margin="2,1">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#223247"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#347DFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.Resources>
            </ComboBox>
            <TextBlock Text="  |  " Foreground="#223247" Margin="8 0" />
            <TextBlock Text="Search:" Foreground="#8BA1B9" VerticalAlignment="Center" Margin="0 0 4 0"/>
            <TextBox Width="220" Height="30" Background="#182433" Foreground="#DDE6F2" BorderBrush="#223247"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="  " />
            <TextBlock Text="Movies:" Foreground="#8BA1B9" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding VodCountText}" Foreground="#DDE6F2" FontWeight="SemiBold" Margin="4 0 0 0"/>
            <Button Content="Close" Margin="16 0 0 0" Padding="14 4" Click="Close_Click" Background="#223247" Foreground="#DDE6F2" BorderBrush="#223247" />
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>
            <!-- Movie grid -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 0 8 0">
                <ItemsControl ItemsSource="{Binding VodContentCollectionView}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Click="VodContent_Click" Padding="0" Margin="6" Cursor="Hand" ToolTip="{Binding Plot}">
                                <Border Width="170" Height="240" Background="#182433" CornerRadius="8" Padding="6" BorderBrush="#223247" BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="#223247"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{StaticResource EqualityConverter}">
                                                            <Binding Path="Id"/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.SelectedVodContent.Id"/>
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter Property="BorderBrush" Value="#347DFF"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <Border Height="130" Background="#223247" CornerRadius="4">
                                            <Grid>
                                                <Image Source="{Binding PosterImage, Converter={StaticResource ImageSourceConverter}}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock Text="No Poster" Foreground="#4B5E71" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding PosterImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                        <TextBlock Text="{Binding DisplayTitle}" FontSize="11" FontWeight="Bold" Foreground="#DDE6F2" TextWrapping="Wrap" Margin="0 4 0 2" MaxHeight="30"/>
                                        <TextBlock Text="{Binding DisplayGenre}" FontSize="9" Foreground="#9DB2C7" TextWrapping="Wrap" Margin="0 1 0 1"/>
                                        <StackPanel Orientation="Horizontal" Margin="0 1 0 0">
                                            <TextBlock Text="{Binding DisplayYear}" FontSize="9" Foreground="#8BA1B9" Margin="0 0 6 0"/>
                                            <TextBlock Text="{Binding DisplayDuration}" FontSize="9" Foreground="#8BA1B9" Margin="0 0 6 0"/>
                                            <TextBlock Text="{Binding DisplayRating}" FontSize="9" Foreground="#8BA1B9"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <!-- Details panel -->
            <Border Grid.Column="1" Background="#131C27" CornerRadius="8" Padding="12" >
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Details" FontWeight="Bold" Foreground="#F0F6FC" FontSize="14" Margin="0 0 0 8"/>
                        <StackPanel Visibility="{Binding SelectedVodContent, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <TextBlock Text="{Binding SelectedVodContent.Name}" FontWeight="SemiBold" FontSize="16" Foreground="#DDE6F2" TextWrapping="Wrap" Margin="0 0 0 6"/>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                <TextBlock Text="{Binding SelectedVodContent.DisplayYear}" FontSize="11" Foreground="#9DB2C7" Margin="0 0 12 0"/>
                                <TextBlock Text="{Binding SelectedVodContent.DisplayDuration}" FontSize="11" Foreground="#9DB2C7" Margin="0 0 12 0"/>
                                <TextBlock Text="{Binding SelectedVodContent.DisplayRating}" FontSize="11" Foreground="#9DB2C7"/>
                            </StackPanel>
                            <TextBlock Text="{Binding SelectedVodContent.Genre}" FontSize="11" Foreground="#8BA1B9" Margin="0 0 0 6" Visibility="{Binding SelectedVodContent.Genre, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBlock Text="Plot:" FontWeight="SemiBold" Foreground="#DDE6F2" Margin="0 8 0 4" Visibility="{Binding SelectedVodContent.Plot, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBlock Text="{Binding SelectedVodContent.Plot}" FontSize="11" Foreground="#9DB2C7" TextWrapping="Wrap" Margin="0 0 0 8" Visibility="{Binding SelectedVodContent.Plot, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBlock Text="Cast:" FontWeight="SemiBold" Foreground="#DDE6F2" Margin="0 8 0 4" Visibility="{Binding SelectedVodContent.Cast, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBlock Text="{Binding SelectedVodContent.Cast}" FontSize="11" Foreground="#9DB2C7" TextWrapping="Wrap" Margin="0 0 0 8" Visibility="{Binding SelectedVodContent.Cast, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBlock Text="Director:" FontWeight="SemiBold" Foreground="#DDE6F2" Margin="0 8 0 4" Visibility="{Binding SelectedVodContent.Director, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBlock Text="{Binding SelectedVodContent.Director}" FontSize="11" Foreground="#9DB2C7" TextWrapping="Wrap" Margin="0 0 0 8" Visibility="{Binding SelectedVodContent.Director, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <Button Content="? Play" Margin="0 16 0 0" Padding="12 8" Background="#347DFF" Foreground="White" BorderBrush="#347DFF" BorderThickness="1" FontWeight="SemiBold" Click="Play_Click"/>
                        </StackPanel>
                        <TextBlock Text="Select a movie..." Foreground="#5A6B7F" FontStyle="Italic" Visibility="{Binding SelectedVodContent, Converter={StaticResource NullToVisibilityConverter}}" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>