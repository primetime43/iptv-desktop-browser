<Window x:Class="DesktopApp.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IPTV Dashboard" Height="700" Width="1400" Background="#0D1117" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9DB2C7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1C2329"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="Border" Property="Background" Value="#223247"/>
                                <Setter Property="Foreground" Value="#FFDDE6F2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Content Panel Style -->
        <Style x:Key="ContentPanelStyle" TargetType="Grid">
            <Setter Property="Background" Value="#161B22"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFDDE6F2"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Recording Scheduler TabControl Style -->
        <Style x:Key="SchedulerTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tab Headers -->
                            <Border Grid.Row="0" Background="#161B22" CornerRadius="6,6,0,0"
                                    BorderBrush="#30363D" BorderThickness="1,1,1,0" Margin="0,0,0,0">
                                <TabPanel x:Name="HeaderPanel" IsItemsHost="True"
                                         Background="Transparent" Margin="4,4,4,0"/>
                            </Border>

                            <!-- Tab Content -->
                            <Border Grid.Row="1" Background="#21262D" CornerRadius="0,0,6,6"
                                    BorderBrush="#30363D" BorderThickness="1,0,1,1">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Recording Scheduler TabItem Style -->
        <Style x:Key="SchedulerTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#9DB2C7"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                BorderThickness="0" CornerRadius="4,4,0,0" Margin="2,0,2,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2C333D"/>
                                <Setter Property="Foreground" Value="#DDE6F2"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#347DFF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="Margin" Value="2,0,2,-1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#DDE6F2"/>
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Grid.Column="2"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="Border"
                                                          Background="{TemplateBinding Background}"
                                                          BorderBrush="{TemplateBinding BorderBrush}"
                                                          BorderThickness="{TemplateBinding BorderThickness}"
                                                          CornerRadius="2">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="20" />
                                                            </Grid.ColumnDefinitions>
                                                            <Path x:Name="Arrow" Grid.Column="1"
                                                                Fill="#9DB2C7" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="8,3,23,3"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <TextBlock x:Name="PlaceholderText" Text="{TemplateBinding Tag}"
                                     IsHitTestVisible="False" Margin="8,3,23,3"
                                     VerticalAlignment="Center" HorizontalAlignment="Left"
                                     Foreground="#667788" Visibility="Collapsed"/>
                            <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="3,3,23,3" Focusable="True"
                                   Background="Transparent" Foreground="{TemplateBinding Foreground}"
                                   Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#21262D" BorderThickness="1"
                                          BorderBrush="#30363D" CornerRadius="2" Margin="0,1,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="#DDE6F2"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}"
                                      BorderThickness="0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#347DFF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#223247"/>
                                        <Setter Property="Foreground" Value="#DDE6F2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Background="#161B22" BorderBrush="#21262D" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- App Header -->
                <Border Background="#0D1117" Padding="16,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“º" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="IPTV Dashboard" FontSize="16" FontWeight="Bold"
                                 Foreground="#FFDDE6F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Margin="0,16,0,0">
                    <Button x:Name="LiveTvNavButton" Style="{StaticResource NavButtonStyle}"
                            Tag="Selected" Click="NavigateToLiveTv">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“º" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Live TV"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="VodNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToVod">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ¬" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Video on Demand"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="RecordingNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToRecording">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âºï¸" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Recording"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SchedulerNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToScheduler">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“…" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Scheduler"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="ProfileNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToProfile">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¤" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Profile"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SettingsNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToSettings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Bottom Section -->
                <StackPanel Margin="16" VerticalAlignment="Bottom">
                    <Separator Background="#21262D" Margin="0,0,0,16"/>

                    <!-- Connection Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Ellipse x:Name="ConnectionStatus" Width="8" Height="8" Fill="#28A745" Margin="0,0,8,0"/>
                        <TextBlock x:Name="ConnectionText" Text="Connected" FontSize="12" Foreground="#9DB2C7"/>
                    </StackPanel>

                    <!-- Recording Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Ellipse x:Name="RecordingStatusIndicator" Width="8" Height="8" Fill="#6C757D" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RecordingStatusText" Text="Idle" FontSize="12" Foreground="#9DB2C7"/>
                    </StackPanel>

                    <!-- Logout Button -->
                    <Button Content="Logout" Style="{StaticResource NavButtonStyle}"
                            Foreground="#DC3545" Click="Logout_Click" Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Style="{StaticResource ContentPanelStyle}">
            <!-- Live TV Page -->
            <Grid x:Name="LiveTvPage" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                    <TextBlock Text="Live TV" Style="{StaticResource HeaderTextStyle}"/>
                    <Button x:Name="CategoriesViewBtn" Content="Categories" Margin="32,0,8,0" Padding="12,6"
                            Background="#223247" Foreground="#FFDDE6F2" BorderThickness="0"
                            Click="ShowCategoriesView_Click"/>
                    <Button x:Name="ChannelsViewBtn" Content="Channels" Margin="0,0,16,0" Padding="12,6"
                            Background="Transparent" Foreground="#9DB2C7" BorderThickness="0"
                            Click="ShowChannelsView_Click"/>
                    <ComboBox x:Name="CategoryCombo" Width="200" Margin="16,0,0,0"
                              DisplayMemberPath="Name" SelectedValuePath="Id"
                              ItemsSource="{Binding CategoriesCollectionView}"
                              Tag="Select category..."
                              SelectionChanged="CategoryCombo_SelectionChanged"
                              Background="#21262D" BorderBrush="#30363D"/>
                </StackPanel>

                <!-- Content Area -->
                <Grid Grid.Row="1" Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Main Content Area -->
                    <Grid Grid.Column="0" Margin="0,0,16,0">
                        <!-- Categories Grid -->
                        <ScrollViewer x:Name="CategoriesScrollViewer" Visibility="Visible">
                            <ItemsControl ItemsSource="{Binding CategoriesCollectionView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Click="CategoryTile_Click" Padding="0" Margin="8" Cursor="Hand"
                                                Background="Transparent" BorderThickness="0">
                                            <Border Style="{StaticResource CardStyle}" Width="200" Height="120">
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="ðŸ“" FontSize="32" Margin="0,0,0,8"
                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"
                                                             Foreground="#FFDDE6F2" TextAlignment="Center"
                                                             TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding ChannelCount, StringFormat='{}{0} channels'}"
                                                             FontSize="12" Foreground="#9DB2C7" TextAlignment="Center"
                                                             Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Channels Grid -->
                        <ScrollViewer x:Name="ChannelsScrollViewer" Visibility="Collapsed">
                            <ItemsControl x:Name="ChannelsItemsControl" ItemsSource="{Binding ChannelsCollectionView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyle}" Width="200" Height="120"
                                                PreviewMouseLeftButtonDown="ChannelTile_PreviewMouseLeftButtonDown"
                                                MouseEnter="ChannelTile_MouseEnter" Cursor="Hand">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Channel Logo/Name -->
                                                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                                    <Image Source="{Binding LogoImage}" Width="48" Height="48"
                                                           Margin="0,0,0,8" Stretch="Uniform"/>
                                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"
                                                             Foreground="#FFDDE6F2" TextAlignment="Center"
                                                             TextWrapping="Wrap" MaxHeight="32"/>
                                                </StackPanel>

                                                <!-- Now Playing -->
                                                <TextBlock Grid.Row="1" Text="{Binding NowTitle}" FontSize="11"
                                                         Foreground="#9DB2C7" TextAlignment="Center"
                                                         TextTrimming="CharacterEllipsis" Margin="0,8,0,0"/>

                                                <!-- Recording Indicator -->
                                                <Border x:Name="RecordingIndicator" Grid.Row="0"
                                                        Background="#DC3545" CornerRadius="12" Width="24" Height="24"
                                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                                        Visibility="{Binding IsRecording, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Ellipse Width="8" Height="8" Fill="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <!-- Channel Info Panel -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Search Controls -->
                                <TextBlock Text="Search" FontWeight="Bold" Foreground="#F0F6FC" Margin="0,0,0,8"/>
                                <Border Background="#182433" CornerRadius="6" BorderBrush="#223247" BorderThickness="1" Padding="8" Margin="0,0,0,16">
                                    <StackPanel>
                                        <Grid>
                                            <TextBox x:Name="ChannelSearchBox" Margin="0,0,0,4" BorderThickness="0"
                                                    Background="#0E1620" Foreground="#DDE6F2" Padding="6,4"
                                                    Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                                    ToolTip="Search categories or channels"/>
                                            <TextBlock Text="Search channels..." IsHitTestVisible="False"
                                                      Foreground="#667788" Margin="6,4,0,4"
                                                      VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text, ElementName=ChannelSearchBox}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                        <CheckBox Content="Search All Channels" Margin="0,8,0,0" VerticalAlignment="Center"
                                                 Foreground="#DDE6F2" IsChecked="{Binding SearchAllChannels}"
                                                 ToolTip="Search across all channels"/>
                                    </StackPanel>
                                </Border>

                                <Separator Background="#21262D" Margin="0,0,0,12"/>

                                <!-- Channel Info -->
                                <TextBlock Text="Selected Channel:" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding SelectedChannelName}" FontWeight="Bold" Foreground="#F0F6FC"
                                          TextWrapping="Wrap" Margin="0,0,0,8"/>

                                <TextBlock Text="{Binding NowProgramText}" Foreground="#9DB2C7" FontSize="12"
                                          TextWrapping="Wrap" Margin="0,0,0,4"/>

                                <TextBlock Text="{Binding SelectedChannel.NowTitle}" Foreground="#DDE6F2" FontWeight="Bold"
                                          Margin="0,0,0,8" TextWrapping="Wrap"/>

                                <TextBlock Text="Description:" Margin="0,0,0,4" Foreground="#8BA1B9"/>
                                <TextBlock Text="{Binding SelectedChannel.NowDescription}" Foreground="#9DB2C7"
                                          FontSize="12" TextWrapping="Wrap" Margin="0,0,0,12"/>

                                <Separator Background="#21262D" Margin="0,0,0,12"/>

                                <!-- Upcoming Programs -->
                                <TextBlock Text="Upcoming:" FontWeight="Bold" Foreground="#F0F6FC" Margin="0,0,0,8"/>
                                <ItemsControl ItemsSource="{Binding UpcomingEntries}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#182433" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding StartTimeLocal, StringFormat='HH:mm'}"
                                                              FontSize="11" Foreground="#8BA1B9"/>
                                                    <TextBlock Text="{Binding Title}" FontSize="12" Foreground="#DDE6F2"
                                                              TextWrapping="Wrap" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#9DB2C7"
                                                              TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="40"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>

            <!-- VOD Page (Hidden by default) -->
            <Grid x:Name="VodPage" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                    <TextBlock Text="Video on Demand" Style="{StaticResource HeaderTextStyle}"/>
                    <Button x:Name="MoviesViewBtn" Content="Movies" Margin="32,0,8,0" Padding="12,6"
                            Background="#223247" Foreground="#FFDDE6F2" BorderThickness="0"
                            Click="ShowMoviesView_Click"/>
                    <Button x:Name="SeriesViewBtn" Content="TV Series" Margin="0,0,16,0" Padding="12,6"
                            Background="Transparent" Foreground="#9DB2C7" BorderThickness="0"
                            Click="ShowSeriesView_Click"/>
                    <ComboBox x:Name="VodCategoryCombo" Width="200" Margin="16,0,16,0"
                              DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"
                              ItemsSource="{Binding VodCategoriesCollectionView}"
                              Tag="Select category..."
                              SelectionChanged="VodCategoryCombo_SelectionChanged"/>
                    <Grid Width="300">
                        <TextBox x:Name="VodSearchBox" Margin="0,0,0,0"
                                 Background="#21262D" Foreground="#FFDDE6F2" BorderBrush="#30363D"
                                 Padding="8" Text="{Binding VodSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="Search movies and series..."/>
                        <TextBlock Text="Search movies and series..." IsHitTestVisible="False"
                                  Foreground="#667788" Margin="8,0,0,0"
                                  VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=VodSearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <!-- Content Area with Right Panel -->
                <Grid Grid.Row="1" Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: VOD Grid -->
                    <Grid Grid.Column="0">
                        <!-- Movies Grid -->
                        <ScrollViewer x:Name="MoviesScrollViewer" Visibility="Visible">
                            <ItemsControl ItemsSource="{Binding VodContentCollectionView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyle}" Width="180" Height="240"
                                                MouseLeftButtonDown="VodContent_Click" Cursor="Hand" Margin="8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="140"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Movie Poster -->
                                                <Border Grid.Row="0" Background="#223247" CornerRadius="4">
                                                    <Grid>
                                                        <Image Source="{Binding PosterImage}" Stretch="Uniform"
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="ðŸŽ¬" FontSize="28" Foreground="#4B5E71"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                 Visibility="{Binding PosterImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                    </Grid>
                                                </Border>

                                                <!-- Movie Info (Title only) -->
