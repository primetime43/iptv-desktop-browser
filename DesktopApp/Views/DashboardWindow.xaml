<Window x:Class="DesktopApp.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IPTV Dashboard" Height="700" Width="1400" Background="#0D1117" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9DB2C7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1C2329"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="Border" Property="Background" Value="#223247"/>
                                <Setter Property="Foreground" Value="#FFDDE6F2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Content Panel Style -->
        <Style x:Key="ContentPanelStyle" TargetType="Grid">
            <Setter Property="Background" Value="#161B22"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFDDE6F2"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#DDE6F2"/>
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Grid.Column="2"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="Border"
                                                          Background="{TemplateBinding Background}"
                                                          BorderBrush="{TemplateBinding BorderBrush}"
                                                          BorderThickness="{TemplateBinding BorderThickness}"
                                                          CornerRadius="2">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="20" />
                                                            </Grid.ColumnDefinitions>
                                                            <Path x:Name="Arrow" Grid.Column="1"
                                                                Fill="#9DB2C7" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="8,3,23,3"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="3,3,23,3" Focusable="True"
                                   Background="Transparent" Foreground="{TemplateBinding Foreground}"
                                   Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#21262D" BorderThickness="1"
                                          BorderBrush="#30363D" CornerRadius="2" Margin="0,1,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="#DDE6F2"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}"
                                      BorderThickness="0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#347DFF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#223247"/>
                                        <Setter Property="Foreground" Value="#DDE6F2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Background="#161B22" BorderBrush="#21262D" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- App Header -->
                <Border Background="#0D1117" Padding="16,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📺" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="IPTV Dashboard" FontSize="16" FontWeight="Bold"
                                 Foreground="#FFDDE6F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Margin="0,16,0,0">
                    <Button x:Name="LiveTvNavButton" Style="{StaticResource NavButtonStyle}"
                            Tag="Selected" Click="NavigateToLiveTv">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📺" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Live TV"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="VodNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToVod">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎬" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Video on Demand"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="RecordingNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToRecording">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏺️" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Recording"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SchedulerNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToScheduler">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Scheduler"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="ProfileNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToProfile">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Profile"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SettingsNavButton" Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToSettings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Bottom Section -->
                <StackPanel Margin="16" VerticalAlignment="Bottom">
                    <Separator Background="#21262D" Margin="0,0,0,16"/>

                    <!-- Connection Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Ellipse x:Name="ConnectionStatus" Width="8" Height="8" Fill="#28A745" Margin="0,0,8,0"/>
                        <TextBlock x:Name="ConnectionText" Text="Connected" FontSize="12" Foreground="#9DB2C7"/>
                    </StackPanel>

                    <!-- Recording Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Ellipse x:Name="RecordingStatusIndicator" Width="8" Height="8" Fill="#6C757D" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RecordingStatusText" Text="Idle" FontSize="12" Foreground="#9DB2C7"/>
                    </StackPanel>

                    <!-- Logout Button -->
                    <Button Content="Logout" Style="{StaticResource NavButtonStyle}"
                            Foreground="#DC3545" Click="Logout_Click" Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Style="{StaticResource ContentPanelStyle}">
            <!-- Live TV Page -->
            <Grid x:Name="LiveTvPage" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                    <TextBlock Text="Live TV" Style="{StaticResource HeaderTextStyle}"/>
                    <Button x:Name="CategoriesViewBtn" Content="Categories" Margin="32,0,8,0" Padding="12,6"
                            Background="#223247" Foreground="#FFDDE6F2" BorderThickness="0"
                            Click="ShowCategoriesView_Click"/>
                    <Button x:Name="ChannelsViewBtn" Content="Channels" Margin="0,0,16,0" Padding="12,6"
                            Background="Transparent" Foreground="#9DB2C7" BorderThickness="0"
                            Click="ShowChannelsView_Click"/>
                    <ComboBox x:Name="CategoryCombo" Width="200" Margin="16,0,0,0"
                              DisplayMemberPath="Name" SelectedValuePath="Id"
                              ItemsSource="{Binding CategoriesCollectionView}"
                              SelectionChanged="CategoryCombo_SelectionChanged"
                              Background="#21262D" BorderBrush="#30363D"/>
                </StackPanel>

                <!-- Content Area -->
                <Grid Grid.Row="1" Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Main Content Area -->
                    <Grid Grid.Column="0" Margin="0,0,16,0">
                        <!-- Categories Grid -->
                        <ScrollViewer x:Name="CategoriesScrollViewer" Visibility="Visible">
                            <ItemsControl ItemsSource="{Binding CategoriesCollectionView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Click="CategoryTile_Click" Padding="0" Margin="8" Cursor="Hand"
                                                Background="Transparent" BorderThickness="0">
                                            <Border Style="{StaticResource CardStyle}" Width="200" Height="120">
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="📁" FontSize="32" Margin="0,0,0,8"
                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"
                                                             Foreground="#FFDDE6F2" TextAlignment="Center"
                                                             TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding ChannelCount, StringFormat='{}{0} channels'}"
                                                             FontSize="12" Foreground="#9DB2C7" TextAlignment="Center"
                                                             Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Channels Grid -->
                        <ScrollViewer x:Name="ChannelsScrollViewer" Visibility="Collapsed">
                            <ItemsControl x:Name="ChannelsItemsControl" ItemsSource="{Binding ChannelsCollectionView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyle}" Width="200" Height="120"
                                                PreviewMouseLeftButtonDown="ChannelTile_PreviewMouseLeftButtonDown"
                                                MouseEnter="ChannelTile_MouseEnter" Cursor="Hand">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Channel Logo/Name -->
                                                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                                    <Image Source="{Binding LogoImage}" Width="48" Height="48"
                                                           Margin="0,0,0,8" Stretch="Uniform"/>
                                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"
                                                             Foreground="#FFDDE6F2" TextAlignment="Center"
                                                             TextWrapping="Wrap" MaxHeight="32"/>
                                                </StackPanel>

                                                <!-- Now Playing -->
                                                <TextBlock Grid.Row="1" Text="{Binding NowTitle}" FontSize="11"
                                                         Foreground="#9DB2C7" TextAlignment="Center"
                                                         TextTrimming="CharacterEllipsis" Margin="0,8,0,0"/>

                                                <!-- Recording Indicator -->
                                                <Border x:Name="RecordingIndicator" Grid.Row="0"
                                                        Background="#DC3545" CornerRadius="12" Width="24" Height="24"
                                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                                        Visibility="{Binding IsRecording, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Ellipse Width="8" Height="8" Fill="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <!-- Channel Info Panel -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Search Controls -->
                                <TextBlock Text="Search" FontWeight="Bold" Foreground="#F0F6FC" Margin="0,0,0,8"/>
                                <Border Background="#182433" CornerRadius="6" BorderBrush="#223247" BorderThickness="1" Padding="8" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBox x:Name="ChannelSearchBox" Margin="0,0,0,4" BorderThickness="0"
                                                Background="#0E1620" Foreground="#DDE6F2" Padding="6,4"
                                                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                                ToolTip="Search categories or channels"/>
                                        <CheckBox Content="Search All Channels" Margin="0,8,0,0" VerticalAlignment="Center"
                                                 Foreground="#DDE6F2" IsChecked="{Binding SearchAllChannels}"
                                                 ToolTip="Search across all channels"/>
                                    </StackPanel>
                                </Border>

                                <Separator Background="#21262D" Margin="0,0,0,12"/>

                                <!-- Channel Info -->
                                <TextBlock Text="Selected Channel:" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding SelectedChannelName}" FontWeight="Bold" Foreground="#F0F6FC"
                                          TextWrapping="Wrap" Margin="0,0,0,8"/>

                                <TextBlock Text="{Binding NowProgramText}" Foreground="#9DB2C7" FontSize="12"
                                          TextWrapping="Wrap" Margin="0,0,0,4"/>

                                <TextBlock Text="{Binding SelectedChannel.NowTitle}" Foreground="#DDE6F2" FontWeight="Bold"
                                          Margin="0,0,0,8" TextWrapping="Wrap"/>

                                <TextBlock Text="Description:" Margin="0,0,0,4" Foreground="#8BA1B9"/>
                                <TextBlock Text="{Binding SelectedChannel.NowDescription}" Foreground="#9DB2C7"
                                          FontSize="12" TextWrapping="Wrap" Margin="0,0,0,12"/>

                                <Separator Background="#21262D" Margin="0,0,0,12"/>

                                <!-- Upcoming Programs -->
                                <TextBlock Text="Upcoming:" FontWeight="Bold" Foreground="#F0F6FC" Margin="0,0,0,8"/>
                                <ItemsControl ItemsSource="{Binding UpcomingEntries}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#182433" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding StartTimeLocal, StringFormat='HH:mm'}"
                                                              FontSize="11" Foreground="#8BA1B9"/>
                                                    <TextBlock Text="{Binding Title}" FontSize="12" Foreground="#DDE6F2"
                                                              TextWrapping="Wrap" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#9DB2C7"
                                                              TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="40"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>

            <!-- VOD Page (Hidden by default) -->
            <Grid x:Name="VodPage" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                    <TextBlock Text="Video on Demand" Style="{StaticResource HeaderTextStyle}"/>
                    <Button x:Name="MoviesViewBtn" Content="Movies" Margin="32,0,8,0" Padding="12,6"
                            Background="#223247" Foreground="#FFDDE6F2" BorderThickness="0"
                            Click="ShowMoviesView_Click"/>
                    <Button x:Name="SeriesViewBtn" Content="TV Series" Margin="0,0,16,0" Padding="12,6"
                            Background="Transparent" Foreground="#9DB2C7" BorderThickness="0"
                            Click="ShowSeriesView_Click"/>
                    <ComboBox x:Name="VodCategoryCombo" Width="200" Margin="16,0,16,0"
                              DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"
                              ItemsSource="{Binding VodCategoriesCollectionView}"
                              SelectionChanged="VodCategoryCombo_SelectionChanged"/>
                    <TextBox x:Name="VodSearchBox" Width="300" Margin="0,0,0,0"
                             Background="#21262D" Foreground="#FFDDE6F2" BorderBrush="#30363D"
                             Padding="8" Text="{Binding VodSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Search movies and series..."/>
                </StackPanel>

                <!-- Content Area with Right Panel -->
                <Grid Grid.Row="1" Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: VOD Grid -->
                    <Grid Grid.Column="0">
                        <!-- Movies Grid -->
                        <ScrollViewer x:Name="MoviesScrollViewer" Visibility="Visible">
                            <ItemsControl ItemsSource="{Binding VodContentCollectionView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyle}" Width="180" Height="240"
                                                MouseLeftButtonDown="VodContent_Click" Cursor="Hand" Margin="8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="140"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Movie Poster -->
                                                <Border Grid.Row="0" Background="#223247" CornerRadius="4">
                                                    <Grid>
                                                        <Image Source="{Binding PosterImage}" Stretch="UniformToFill"
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="🎬" FontSize="28" Foreground="#4B5E71"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                 Visibility="{Binding PosterImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                    </Grid>
                                                </Border>

                                                <!-- Movie Info (Title only) -->
                                                <StackPanel Grid.Row="1" Margin="8" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Bold"
                                                             Foreground="#FFDDE6F2" TextWrapping="Wrap" MaxHeight="60"
                                                             TextTrimming="CharacterEllipsis" HorizontalAlignment="Center"
                                                             TextAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Series Grid -->
                        <ScrollViewer x:Name="SeriesScrollViewer" Visibility="Collapsed">
                            <ItemsControl ItemsSource="{Binding SeriesContentCollectionView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyle}" Width="180" Height="240"
                                                MouseLeftButtonDown="SeriesContent_Click" Cursor="Hand" Margin="8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="140"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Series Poster -->
                                                <Border Grid.Row="0" Background="#223247" CornerRadius="4">
                                                    <Grid>
                                                        <Image Source="{Binding PosterImage}" Stretch="UniformToFill"
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="📺" FontSize="28" Foreground="#4B5E71"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                 Visibility="{Binding PosterImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                    </Grid>
                                                </Border>

                                                <!-- Series Info (Title only) -->
                                                <StackPanel Grid.Row="1" Margin="8" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Bold"
                                                             Foreground="#FFDDE6F2" TextWrapping="Wrap" MaxHeight="60"
                                                             TextTrimming="CharacterEllipsis" HorizontalAlignment="Center"
                                                             TextAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <!-- Right: VOD Details Panel -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="16,0,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="VodDetailsPanel" Margin="16">
                                <!-- Default state -->
                                <TextBlock x:Name="VodDetailsPlaceholder" Text="Select a movie or series to view details"
                                         FontSize="14" Foreground="#8BA1B9" TextAlignment="Center"
                                         VerticalAlignment="Center" Margin="0,50,0,0"/>

                                <!-- VOD Details (Hidden by default) -->
                                <StackPanel x:Name="VodDetailsContent" Visibility="Collapsed">
                                    <!-- Large Poster -->
                                    <Border Background="#223247" CornerRadius="8" Height="300" Margin="0,0,0,16">
                                        <Grid>
                                            <Image x:Name="VodDetailsPoster" Stretch="UniformToFill"
                                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="VodDetailsIcon" Text="🎬" FontSize="48" Foreground="#4B5E71"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <!-- Title -->
                                    <TextBlock x:Name="VodDetailsTitle" FontSize="18" FontWeight="Bold"
                                             Foreground="#FFDDE6F2" TextWrapping="Wrap" Margin="0,0,0,8"/>

                                    <!-- Basic Info -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock x:Name="VodDetailsYear" FontSize="12" Foreground="#9DB2C7" Margin="0,0,16,0"/>
                                        <TextBlock x:Name="VodDetailsDuration" FontSize="12" Foreground="#9DB2C7"/>
                                    </StackPanel>

                                    <!-- Rating -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="⭐" FontSize="14" Margin="0,0,4,0"/>
                                        <TextBlock x:Name="VodDetailsRating" FontSize="12" Foreground="#9DB2C7"/>
                                    </StackPanel>

                                    <!-- Genre -->
                                    <TextBlock Text="Genre:" FontSize="12" FontWeight="SemiBold" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="VodDetailsGenre" FontSize="12" Foreground="#FFDDE6F2"
                                             TextWrapping="Wrap" Margin="0,0,0,16"/>

                                    <!-- Cast (lazy loaded) -->
                                    <TextBlock Text="Cast:" FontSize="12" FontWeight="SemiBold" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="VodDetailsCast" FontSize="12" Foreground="#FFDDE6F2"
                                             TextWrapping="Wrap" Margin="0,0,0,16" Text="Loading..."/>

                                    <!-- Director (lazy loaded) -->
                                    <TextBlock Text="Director:" FontSize="12" FontWeight="SemiBold" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="VodDetailsDirector" FontSize="12" Foreground="#FFDDE6F2"
                                             TextWrapping="Wrap" Margin="0,0,0,16" Text="Loading..."/>

                                    <!-- Plot (lazy loaded) -->
                                    <TextBlock Text="Plot:" FontSize="12" FontWeight="SemiBold" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="VodDetailsPlot" FontSize="12" Foreground="#FFDDE6F2"
                                             TextWrapping="Wrap" Margin="0,0,0,16" Text="Loading..."/>

                                    <!-- Actions -->
                                    <StackPanel Margin="0,16,0,0">
                                        <Button x:Name="VodPlayButton" Content="▶ Play" Background="#28A745" Foreground="White"
                                                Padding="12,8" Margin="0,0,0,8" Click="VodPlayButton_Click"/>
                                        <Button x:Name="VodTrailerButton" Content="🎬 Trailer" Background="#6C757D" Foreground="White"
                                                Padding="12,8" Click="VodTrailerButton_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>

            <!-- Recording Page (Hidden by default) -->
            <Grid x:Name="RecordingPage" Visibility="Collapsed">
                <StackPanel Margin="16">
                    <TextBlock Text="Manual Recording" Style="{StaticResource HeaderTextStyle}"/>

                    <Border Style="{StaticResource CardStyle}" MaxWidth="600" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="Record Current Channel" FontSize="16" FontWeight="Bold"
                                     Foreground="#FFDDE6F2" Margin="0,0,0,16"/>

                            <!-- Recording Controls -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Selected Channel:" FontSize="12" Foreground="#9DB2C7" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="SelectedChannelText" Text="None selected" FontSize="14"
                                             Foreground="#FFDDE6F2" Margin="0,0,0,8"/>

                                    <TextBlock Text="Status:" FontSize="12" Foreground="#9DB2C7" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="RecordingStatusDisplay" Text="{Binding RecordingManager.StatusDisplay}"
                                             FontSize="14" Foreground="#FFDDE6F2"/>
                                </StackPanel>

                                <Button Grid.Column="1" x:Name="RecordButton" Content="Record"
                                        Background="#28A745" Foreground="White" BorderThickness="0"
                                        Padding="24,12" FontSize="14" Click="RecordBtn_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Scheduler Page (Hidden by default) -->
            <Grid x:Name="SchedulerPage" Visibility="Collapsed">
                <StackPanel Margin="16">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Recording Scheduler" Style="{StaticResource HeaderTextStyle}"/>
                        <Button Content="Open Scheduler" Background="#347DFF" Foreground="White"
                                BorderThickness="0" Padding="16,8" Margin="32,0,0,0"
                                Click="OpenRecordingScheduler_Click"/>
                    </StackPanel>

                    <Border Style="{StaticResource CardStyle}">
                        <TextBlock Text="Use the Recording Scheduler to set up automatic recordings based on TV guide information or custom time ranges."
                                 FontSize="14" Foreground="#9DB2C7" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Profile Page (Hidden by default) -->
            <Grid x:Name="ProfilePage" Visibility="Collapsed">
                <ScrollViewer Margin="16" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Profile &amp; Debug Info" Style="{StaticResource HeaderTextStyle}"/>

                        <!-- Account Information -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Account Information" FontSize="18" FontWeight="Bold"
                                         Foreground="#F0F6FC" Margin="0,0,0,16"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Username:" Foreground="#8BA1B9" Grid.Row="0" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding ProfileUsername}" Foreground="#DDE6F2" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

                                    <TextBlock Text="Status:" Foreground="#8BA1B9" Grid.Row="1" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding ProfileStatus}" Foreground="#DDE6F2" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

                                    <TextBlock Text="Trial Account:" Foreground="#8BA1B9" Grid.Row="2" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding ProfileTrialText}" Foreground="#DDE6F2" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

                                    <TextBlock Text="Expires:" Foreground="#8BA1B9" Grid.Row="3" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding ProfileExpiryText}" Foreground="#DDE6F2" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

                                    <TextBlock Text="Days Remaining:" Foreground="#8BA1B9" Grid.Row="4" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding ProfileDaysRemaining}" Foreground="#DDE6F2" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"/>

                                    <TextBlock Text="Max Connections:" Foreground="#8BA1B9" Grid.Row="5" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding ProfileMaxConnections}" Foreground="#DDE6F2" Grid.Row="5" Grid.Column="1" Margin="0,0,0,8"/>

                                    <TextBlock Text="Active Connections:" Foreground="#8BA1B9" Grid.Row="6"/>
                                    <TextBlock Text="{Binding ProfileActiveConnections}" Foreground="#DDE6F2" Grid.Row="6" Grid.Column="1"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Profile Actions -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Profile Actions" FontSize="18" FontWeight="Bold"
                                         Foreground="#F0F6FC" Margin="0,0,0,16"/>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Refresh Profile" Background="#28A745" Foreground="White"
                                            BorderThickness="0" Padding="16,8" Margin="0,0,12,0"
                                            Click="RefreshProfile_Click"/>
                                    <Button Content="Clear Debug Log" Background="#DC3545" Foreground="White"
                                            BorderThickness="0" Padding="12,6"
                                            Click="ClearDebugOutput_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Debug Information -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <TextBlock Text="Debug Information" FontSize="18" FontWeight="Bold"
                                             Foreground="#F0F6FC"/>
                                    <Button Content="Clear Output" Background="#DC3545" Foreground="White"
                                            BorderThickness="0" Padding="12,6" Margin="16,0,0,0"
                                            Click="ClearDebugOutput_Click"/>
                                </StackPanel>

                                <TextBlock Text="API Call Debug Log:" Foreground="#8BA1B9" Margin="0,0,0,8"/>
                                <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                    <TextBox x:Name="DebugOutputBox" IsReadOnly="True" FontFamily="Consolas"
                                           FontSize="11" TextWrapping="Wrap" AcceptsReturn="True"
                                           Background="#0E1620" Foreground="#C8D3E0" BorderThickness="0"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Settings Page -->
            <Grid x:Name="SettingsPage" Visibility="Collapsed">
                <ScrollViewer Margin="16" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Settings" Style="{StaticResource HeaderTextStyle}"/>

                        <!-- Status bar -->
                        <Border Background="#1A242F" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <TextBlock x:Name="SettingsStatusText" Text="Configure your IPTV player and recording settings"
                                       Foreground="#8BA1B9" FontSize="12"/>
                        </Border>

                        <!-- Player Settings Section -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="🎬 Player Settings" FontSize="18" FontWeight="Bold"
                                         Foreground="#F0F6FC" Margin="0,0,0,16"/>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="External Player" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <ComboBox x:Name="SettingsPlayerKindCombo" SelectedIndex="0" SelectionChanged="SettingsPlayerKindCombo_SelectionChanged">
                                        <ComboBoxItem Tag="VLC" Content="VLC Media Player"/>
                                        <ComboBoxItem Tag="MPCHC" Content="MPC-HC"/>
                                        <ComboBoxItem Tag="MPV" Content="mpv"/>
                                        <ComboBoxItem Tag="Custom" Content="Custom Player"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Player Executable Path" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBox x:Name="SettingsPlayerExeTextBox" Height="34" TextChanged="SettingsPlayerExeTextBox_TextChanged"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                                        <Button Content="Browse" Width="110" Height="32" Margin="0,0,8,0"
                                                Click="SettingsBrowsePlayer_Click" Background="#6C757D" Foreground="White" Padding="8,4"/>
                                        <Button x:Name="SettingsAutoDetectPlayerBtn" Content="Auto-detect" Width="110" Height="32"
                                                Click="SettingsAutoDetectPlayer_Click" Background="#6C757D" Foreground="White" Padding="8,4"/>
                                    </StackPanel>
                                    <TextBlock x:Name="SettingsPlayerPathStatus" FontSize="11" Margin="2,4,0,0" TextWrapping="Wrap" Foreground="#22863A"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Arguments Template" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBox x:Name="SettingsArgsTemplateTextBox" Height="34" TextChanged="SettingsArgsTemplateTextBox_TextChanged"/>
                                    <TextBlock Text="Tokens: {url} {title}. Leave blank to use default for selected player."
                                             Foreground="#657A91" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <Button x:Name="SettingsTestPlayerBtn" Content="Test Player" Width="100" Height="28"
                                                Click="SettingsTestPlayer_Click" Background="#6C757D" Foreground="White" Padding="8,4"/>
                                        <TextBlock x:Name="SettingsTestPlayerStatus" FontSize="11" Margin="8,0,0,0"
                                                 VerticalAlignment="Center" Foreground="#8BA1B9"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Recording Settings Section -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="🎥 Recording Settings" FontSize="18" FontWeight="Bold"
                                         Foreground="#F0F6FC" Margin="0,0,0,16"/>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="FFmpeg Path" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBox x:Name="SettingsFfmpegPathTextBox" Height="34" TextChanged="SettingsFfmpegPathTextBox_TextChanged"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                                        <Button Content="Browse" Width="110" Height="32" Margin="0,0,8,0"
                                                Click="SettingsBrowseFfmpeg_Click" Background="#6C757D" Foreground="White" Padding="8,4"/>
                                        <Button x:Name="SettingsAutoDetectFfmpegBtn" Content="Auto-detect" Width="110" Height="32"
                                                Click="SettingsAutoDetectFfmpeg_Click" Background="#6C757D" Foreground="White" Padding="8,4"/>
                                    </StackPanel>
                                    <TextBlock x:Name="SettingsFfmpegPathStatus" FontSize="11" Margin="2,4,0,0" TextWrapping="Wrap" Foreground="#22863A"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Recording Directory" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBox x:Name="SettingsRecordingDirTextBox" Height="34" TextChanged="SettingsRecordingDirTextBox_TextChanged"/>
                                    <Button Content="Browse" Width="110" Height="32" Margin="0,4,0,8"
                                            Click="SettingsBrowseRecordingDir_Click" Background="#6C757D" Foreground="White" Padding="8,4"/>
                                    <TextBlock x:Name="SettingsRecordingDirStatus" FontSize="11" Margin="2,4,0,0" TextWrapping="Wrap" Foreground="#8BA1B9"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="FFmpeg Args Template" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBox x:Name="SettingsFfmpegArgsTextBox" Height="34"/>
                                    <TextBlock Text="Tokens: {url} {output} {title}. Default copies stream without re-encoding."
                                             Foreground="#657A91" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- EPG Settings Section -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="📺 EPG Settings" FontSize="18" FontWeight="Bold"
                                         Foreground="#F0F6FC" Margin="0,0,0,16"/>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Last EPG Update" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBox x:Name="SettingsLastEpgUpdateTextBox" Height="34" IsReadOnly="True"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="EPG Refresh Interval (minutes)" Foreground="#8BA1B9" Margin="0,0,0,4"/>
                                    <TextBox x:Name="SettingsEpgIntervalTextBox" Height="34" TextChanged="SettingsEpgIntervalTextBox_TextChanged"/>
                                    <Button Content="Update EPG Now" Width="150" Height="32" Margin="0,4,0,8"
                                            Click="SettingsUpdateEpgNow_Click" Background="#6C757D" Foreground="White" Padding="8,4"/>
                                    <TextBlock x:Name="SettingsEpgIntervalStatus" FontSize="11" Margin="2,4,0,0" TextWrapping="Wrap" Foreground="#8BA1B9"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Actions -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Actions" FontSize="18" FontWeight="Bold"
                                         Foreground="#F0F6FC" Margin="0,0,0,16"/>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Restore Defaults" Width="140" Height="40" Margin="0,0,12,0"
                                            Click="SettingsRestoreDefaults_Click" Background="#DC3545" Foreground="White" Padding="12,6"/>
                                    <Button Content="Save Settings" Width="120" Height="40"
                                            Click="SettingsSave_Click" Background="#28A745" Foreground="White" Padding="12,6"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>