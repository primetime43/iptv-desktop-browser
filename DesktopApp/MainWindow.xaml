<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IPTV Xtream Login" Height="640" Width="860" MinWidth="640" MinHeight="480" WindowStartupLocation="CenterScreen" Background="#0D1117">
    <Window.Resources>
        <!-- Gradient brush for the main background overlay -->
        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#182335" Offset="0"/>
            <GradientStop Color="#101822" Offset="0.55"/>
            <GradientStop Color="#0D1117" Offset="1"/>
        </LinearGradientBrush>
        <!-- TextBox style with placeholder support -->
        <Style TargetType="TextBox" x:Key="InputTextBox">
            <Setter Property="Margin" Value="0 4 0 14"/>
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="Foreground" Value="#DDE6F2"/>
            <Setter Property="Background" Value="#182230"/>
            <Setter Property="BorderBrush" Value="#243347"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <TextBlock x:Name="Placeholder" Text="{TemplateBinding Tag}" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="#5A6B7F" IsHitTestVisible="False" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3D6EFF"/>
                                <Setter Property="Background" Value="#1E2D40"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox" x:Key="PasswordBoxStyle">
            <Setter Property="Margin" Value="0 4 0 14"/>
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="Foreground" Value="#DDE6F2"/>
            <Setter Property="Background" Value="#182230"/>
            <Setter Property="BorderBrush" Value="#243347"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3D6EFF"/>
                                <Setter Property="Background" Value="#1E2D40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Primary button -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#3D6EFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16 10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="8" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#5A82FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#2F57B8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Subtle icon button style -->
        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="#9DB1C5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1E2936"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#273644"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BgGradient}">
        <Ellipse Width="650" Height="650" Fill="#182A44" Opacity="0.35" IsHitTestVisible="False">
            <Ellipse.Effect>
                <BlurEffect Radius="160"/>
            </Ellipse.Effect>
        </Ellipse>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Header refined -->
            <Grid Margin="12 10 20 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Xtream Codes" FontSize="30" FontWeight="Bold" Foreground="#F0F6FC" Margin="0 0 10 0"/>
                    <Border Background="#243347" CornerRadius="4" Padding="8 4" VerticalAlignment="Center">
                        <TextBlock Text="Login" FontSize="14" Foreground="#9FB3C7"/>
                    </Border>
                </StackPanel>
                <Button Grid.Column="1" Style="{StaticResource IconButton}" Click="OpenCredentialManager_Click" ToolTip="Manage Credentials">
                    <TextBlock Text="⚙" FontSize="16"/>
                </Button>
            </Grid>
            <Border Grid.Row="1" Width="620" Padding="40 46" Background="#131C27" CornerRadius="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 8 0 0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="28" ShadowDepth="0" Color="#141C26" Opacity="0.85"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Portal / Server" Foreground="#8BA1B9" FontSize="12" Margin="2 0 0 0"/>
                            <TextBox x:Name="ServerTextBox" Style="{StaticResource InputTextBox}" Tag="e.g. http://example.com"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="110"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Username" Foreground="#8BA1B9" FontSize="12" Margin="2 0 0 0"/>
                                    <TextBox x:Name="UsernameTextBox" Style="{StaticResource InputTextBox}" Tag="Your username"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="16 0 0 0">
                                    <TextBlock Text="Port" Foreground="#8BA1B9" FontSize="12" Margin="2 0 0 0"/>
                                    <TextBox x:Name="PortTextBox" Style="{StaticResource InputTextBox}" Text="80"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="16 22 0 0" VerticalAlignment="Top" Orientation="Horizontal">
                                    <CheckBox x:Name="SslCheckBox" Content="SSL" Foreground="#DDE6F2" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="Password" Foreground="#8BA1B9" FontSize="12" Margin="2 0 0 0"/>
                            <PasswordBox x:Name="PasswordBoxInput" Style="{StaticResource PasswordBoxStyle}"/>
                            <DockPanel Margin="0 0 0 10">
                                <CheckBox x:Name="RememberCheckBox" Content="Remember me" Foreground="#DDE6F2"/>
                                <TextBlock DockPanel.Dock="Right" Text="Manage" Foreground="#5A82FF" Cursor="Hand" MouseLeftButtonUp="OpenCredentialManager_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8 0 0 0"/>
                            </DockPanel>
                            <Button x:Name="LoginButton" Style="{StaticResource PrimaryButton}" Content="Sign In" Height="46" Click="LoginButton_Click"/>
                            <TextBlock x:Name="StatusText" Margin="4 14 0 4" Foreground="#6C8298" FontSize="12" TextWrapping="Wrap"/>
                            <Expander x:Name="DiagnosticsExpander" Header="Details" Background="#182230" Foreground="#DDE6F2" Visibility="Collapsed" Margin="0 6 0 0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <DockPanel LastChildFill="True">
                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                                            <Button Content="Copy" Width="70" Height="26" Margin="0 0 8 0" Click="CopyDiagnostics_Click"/>
                                            <Button Content="Clear" Width="70" Height="26" Click="ClearDiagnostics_Click"/>
                                        </StackPanel>
                                    </DockPanel>
                                    <TextBox Grid.Row="1" x:Name="DiagnosticsText" Margin="0" FontFamily="Consolas,Menlo,Monaco" FontSize="12" TextWrapping="NoWrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" Background="#0E1620" Foreground="#C8D3E0"/>
                                </Grid>
                            </Expander>
                        </StackPanel>
                        <Border Grid.Row="1" Margin="0 28 0 0" Background="#182230" CornerRadius="12" Padding="18 16">
                            <StackPanel>
                                <TextBlock Text="What is Xtream Codes?" Foreground="#A4B6C7" FontWeight="SemiBold"/>
                                <TextBlock Text="Enter the portal URL (or IP), your account username &amp; password provided by your IPTV provider. SSL will prefix https:// and default port 443 if selected." TextWrapping="Wrap" Foreground="#6C8298" FontSize="12" Margin="0 6 0 0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
